{
  "Urls": "http://*:80;https://*:443",
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "web-routes": {
        "ClusterId": "web",
        "Match": {
          "Path": "{**catch-all}",
          "Hosts": [ "www.stormancer.com", "stormancer.com" ]
        },
        "strm-public-routes": {
          "ClusterId": "strm-public",
          "Match": {
            "Path": "{**catch-all}",
            "Hosts": [ "public.test.stormancer.com" ]
          }
        },
        "strm-admin-routes": {
          "ClusterId": "strm-admin",
          "Match": {
            "Path": "{**catch-all}",
            "Hosts": [ "admin.test.stormancer.com" ]
          }
        }
      }
    },

    "Clusters": {
      "web": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:8080/"
          }
        }
      },
      "strm-public": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:8081/"
          }
        }
      },
      "strm-admin": {
        "Destinations": {
          "destination1": {
            "Address": "https://localhost:8082/"
          }
        }
      }
    }
  },
  "LettuceEncrypt": {
    // Set this to automatically accept the terms of service of your certificate authority.
    // If you don't set this in config, you will need to press "y" whenever the application starts
    "AcceptTermsOfService": true,
    "UseStagingServer": true,
    // You must specify at least one domain name
    "DomainNames": [
      "www.stormancer.com",
      "stormancer.com",
      "public.test.stormancer.com",
      "admin.test.stormancer.com"
    ],

    // You must specify an email address to register with the certificate authority
    "EmailAddress": "admin@stormancer.com"
  }
}
